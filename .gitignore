# Create/update .gitignore
cat > .gitignore << 'EOF'
# Maven
target/
!**/src/main/**/target/
!**/src/test/**/target/

# Gradle
.gradle/
build/
!**/src/main/**/build/
!**/src/test/**/build/

# IntelliJ IDEA
.idea/
*.iws
*.iml
*.ipr

# Eclipse
.classpath
.project
.settings/

# NetBeans
/nbproject/private/
/nbbuild/
/dist/
/nbdist/
/.nb-gradle/

# VS Code
.vscode/

# Logs
*.log
logs/

# Temporary files
*.tmp
*.temp

# Package Files
*.jar
*.war
*.ear
*.zip
*.tar.gz
*.rar

# Environment files
.env
application-dev.properties
application-prod.properties

# Database
*.db
*.sqlite

# OS
.DS_Store
Thumbs.db

# Application Specific
/bin/
/lib/
EOF